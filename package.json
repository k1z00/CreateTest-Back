{
  "name": "llvm-quest-back",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "bun@1.1.42",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.js",
  "files": [
    "dist"
  ],
  "engines": {
    "bun": ">=1.1.30"
  },
  "scripts": {
    "dev": "bun --hot src/main.ts",
    "-----------------------------------------------------------------------------------------------------------": "",
    "build": "bunx --bun tsup --config build/build-server.ts",
    "start": "bun --bun run dist/main.js",
    "------------------------------------------------------------------------------------------------------------": "",
    "lint": "eslint --flag unstable_ts_config .",
    "typecheck": "tsc --noEmit",
    "--------------------------------------------------------------------------------------------------------------": "",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "---------------------------------------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks && bun run prisma:generate"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@prisma/client": "^6.1.0",
    "hono": "^4.6.14",
    "openai": "^4.77.0",
    "prisma": "^6.1.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/bun": "latest",
    "bun": "^1.1.34",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^0.1.3",
    "jiti": "^2.4.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "uuid": "^11.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx --bun lint-staged && bun --bun typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  }
}
